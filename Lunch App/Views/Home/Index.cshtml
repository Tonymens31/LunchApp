@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout_index.cshtml";
}
<div class="card">
    <div class="card-body login-card-body">
        <h5 class="login-box-msg"><strong>Sign in to start your session</strong></h5>

        <form method="post">
            <div class="input-group mb-3">
                <input type="email" class="form-control" placeholder="Email">
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-envelope"></span>
                    </div>
                </div>
            </div>
            <div class="input-group mb-3">
                <input type="password" class="form-control" placeholder="Password">
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-lock"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-8">
                    <div class="icheck-primary">
                        <input type="checkbox" id="remember">
                        <label for="remember">
                            Remember Me
                        </label>
                    </div>
                </div>
                <div class="col-4">
                    <a type="button" asp-controller="Home" asp-action="Dashboard" class="btn btn-primary btn-block">Sign In</a>
                </div>
            </div>
        </form>

@{
    ViewData["Title"] = "Staff";
}
<div class="app-main__outer">
    <div class="app-main__inner">
        <div class="row">
            <div class="col-md-12 col-xl-12">
                <div class="main-card mb-3 card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-2">
                                <h3 class="card-title" style="margin-top: 5px">Staff</h3>
                            </div>
                            <div class="col-md-2">
                            </div>
                            <div class="col-md-4">
                                <div class="search-wrapper">
                                    <div class="input-holder">
                                        <input type="text" class="search-input" placeholder="Type ID or name to search">
                                        <button class="search-icon"><span></span></button>
                                    </div>
                                    <button class="close"></button>
                                </div>
                            </div>
                            <div class="col-md-3"></div>
                            <div class="col-md-1" style="margin-top:5px">
                                <button class="btn btn-lg btn-outline-primary pull-right" style="margin-bottom: 15px" id="btnAddStaff">Add Staff</button>
                            </div>
                        </div>
                        <div class="table-responsive tableFixHead" style="height: 480px; overflow:auto" >
                            <table class="mb-0 table table-striped table-hover">
                                <thead>
                                    <tr style="background-color: #063970; color: white;">
                                        <th width="15%">StaffID</th>
                                        <th width="30%">Name</th>
                                        <th width="30%">Email</th>
                                        <th width="15%">Phone</th>
                                        <th width="10%" style="z-index: 10000 !important;">Status</th> 
                                        <th width="5%">Actions</th>
                                    </tr>
                                </thead>
                                <tbody id="staffTable"></tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
         
@section Modals{
    <div class="modal" id="staffModal" tabindex="-1">
        <div class="modal-dialog modal-md">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Add Staff</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"> <i class="far fa-times-circle text-danger"></i> </button>
                </div>
                <form class="form-horizontal" id="appForm">
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-md-6">
                                <label for="staffId" style="margin-bottom: 0px; margin-top: 10px" class="form-label">StaffID   <span class="text-danger">*</span> </label>
                                <input type="text" class="form-control required" id="staffMemID">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <label for="name" style="margin-bottom: 0px; margin-top: 10px" class="form-label">Name   <span class="text-danger">*</span> </label>
                                <input type="text" class="form-control required" id="name">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <label for="email" style="margin-bottom: 0px; margin-top: 10px" class="form-label">Email   <span class="text-danger">*</span> </label>
                                <input type="text" class="form-control required" id="email">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label for="phone" style="margin-bottom: 0px; margin-top: 10px" class="form-label">Phone №   <span class="text-danger">*</span> </label>
                                <input type="tel" class="form-control required " id="phone">
                            </div>
                            <div class="col-md-6">
                                <label class="control-label">Status   <span class="text-danger">*</span> </label>
                                <select class="form-control required" id="status">
                                    <option value="-1" selected disabled>Select Status</option>
                                    <option value="1">Active</option>
                                    <option value="2">Inactive</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary" id="saveStaff" disabled>Save  <i class="fa fa-save"></i></button>
                        <button type="button" class="btn btn-danger" id="closeBtn" data-dismiss="modal">Close</button>
                    </div>
                </form>

            </div>

        </div>
    </div>
}
@section Scripts{
    <script src="~/js/staff.js"></script>
}
